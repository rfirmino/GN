<p id="notice"><%= notice %></p>

<h1>Fornecedores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Cidade</th>
      <th>Endereço</th>
      <th>Bairro</th>
      <th>Número</th>
      <th>E-mails</th>
      <th>Telefones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.descricao %></td>
        <td><%= fornecedor.cidade %></td>
        <td><%= fornecedor.endereco %></td>
        <td><%= fornecedor.bairro %></td>
        <td><%= fornecedor.numero %></td>
        <td><%= MostrarEmails(fornecedor.id) %></td>
        <td><%= MostrarTelefones(fornecedor.id) %></td>
        <td><%= link_to 'Mostrar', fornecedor %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Deletar', fornecedor, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions">
  <%= link_to 'Novo Fornecedor', new_fornecedor_path, class: 'btn btn-primary grey' %>
</div>

<br>

<div class="links">
  <%= link_to 'Produtos', produtos_path, class: "btn waves-effect waves-light blue white-text"%>
  <%= link_to 'Pedidos', pedidos_path, class: "btn waves-effect waves-light blue white-text"%>
  <%= link_to 'Transportadoras', transportadoras_path, class: "btn waves-effect waves-light blue white-text"%>
</div>