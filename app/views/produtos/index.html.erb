<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.fornecedor.nome %></td>
        <td><%= link_to 'Mostrar', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Deletar', produto, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions">
  <%= link_to 'Novo Produto', new_produto_path, class: 'btn btn-primary grey' %>
</div>

<br>

<div class="links">
  <%= link_to 'Fornecedores', fornecedors_path, class: "btn waves-effect waves-light blue white-text"%>
  <%= link_to 'Pedidos', pedidos_path, class: "btn waves-effect waves-light blue white-text"%>
  <%= link_to 'Transportadoras', transportadoras_path, class: "btn waves-effect waves-light blue white-text"%>
</div>
