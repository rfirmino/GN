<p id="notice"><%= notice %></p>

<h1>Transportadoras</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transportadoras.each do |transportadora| %>
      <tr>
        <td><%= transportadora.nome %></td>
        <td><%= link_to 'Mostrar', transportadora %></td>
        <td><%= link_to 'Editar', edit_transportadora_path(transportadora) %></td>
        <td><%= link_to 'Deletar', transportadora, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="actions">
  <%= link_to 'Nova Transportadora', new_transportadora_path, class: 'btn btn-primary grey' %>
</div>

<br>

<div class="links">
  <%= link_to 'Fornecedores', fornecedors_path, class: "btn waves-effect waves-light blue white-text"%>
  <%= link_to 'Pedidos', pedidos_path, class: "btn waves-effect waves-light blue white-text"%>
  <%= link_to 'Produtos', produtos_path, class: "btn waves-effect waves-light blue white-text"%>
</div>
